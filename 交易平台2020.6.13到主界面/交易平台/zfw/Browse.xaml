<Page x:Class="交易平台.zfw.Browse"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:交易平台.zfw"
      mc:Ignorable="d" 
      d:DesignHeight="462" d:DesignWidth="685"
      Title="Browse">

    <Grid>
        <Viewbox Stretch="Fill">
            <Canvas x:Name="ca" Width="1000" Height="650">
                <Canvas.Background>
                    <LinearGradientBrush EndPoint="0,0.7" StartPoint="1,0.2">
                        <GradientStop Color="#FFFDFDC4" Offset="0"/>
                        <GradientStop Color="#FFF7F75D" Offset="1"/>
                    </LinearGradientBrush>
                </Canvas.Background>
                
                <ListBox x:Name="listBox" Height="601" Width="1000" Canvas.Top="49">
                </ListBox>
                
                <Button x:Name="button"  Canvas.Left="845" Width="151" Height="44" FontSize="20" Background="{x:Null}" >
                    <Hyperlink NavigateUri="upload.xaml">上传商品</Hyperlink>
                </Button>

            </Canvas>
        </Viewbox>
    </Grid>
</Page>
