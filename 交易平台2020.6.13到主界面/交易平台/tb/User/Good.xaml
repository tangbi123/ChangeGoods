<Page x:Class="交易平台.tb.User.Good"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:交易平台.tb.User"
      mc:Ignorable="d" 
      d:DesignHeight="200" d:DesignWidth="640"
      Title="Good">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <Image Name="图片" Margin="4" Grid.Column="0" Source="交易.png" />
        <Separator Height="300" Width="1" Grid.Column="1" Margin="0,0,464,-20" />

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.Resources>
                <Style TargetType="Label">
                    <Setter Property="FontSize" Value="30"/>
                    <Setter Property="FontFamily" Value="楷体"/>
                    <Setter Property="Width" Value="470"/>
                    <Setter Property="Height" Value="120"/>
                </Style>
            </Grid.Resources>
            
            <StackPanel Grid.Row="0">
                <StackPanel Orientation="Horizontal" >
                    <Label Height="43" Margin="0,0,-5,0" Width="Auto">
                        <TextBlock Name="商品名称" Text="商品名称:" Height="Auto" />
                    </Label>
                    <Label Height="43" Margin="150,0,-5,0" Width="Auto">
                        <TextBlock Name="商品号" Text="商品号：" Height="Auto" />
                    </Label>
                </StackPanel>
                
                <Label Height="74" Margin="0,0,-5,0" >
                    <TextBlock x:Name="商品信息" Text="商品信息: 是实话实说是实话实说很受伤很受伤开始" TextWrapping="Wrap"/>
                </Label>
            </StackPanel>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <Label Name="价格" Content="123￥" Width="100" Height="60" Margin="0,0,133,0"/>
                <Button Content="加入购物车" Width="100" Height="40" Margin="67,10,65,10" Grid.Column="1"/>
                <Button Content="结算" Width="50" Height="40" Margin="172,10,10,10" Grid.Column="1"/>
                <!--<StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Right">
                
            </StackPanel>-->
            </Grid>
        </Grid>
    </Grid>
</Page>
